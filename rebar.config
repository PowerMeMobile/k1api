{erl_opts, [
    warn_export_all,
    warn_missing_spec,
    %warnings_as_errors,
    debug_info
]}.
{xref_checks, [
    undefined_function_calls,
    deprecated_function_calls,
    locals_not_used
]}.
{sub_dirs, ["rel"]}.
{deps, [
    {alley_services, ".*", {git, "https://github.com/PowerMeMobile/alley_services.git", {branch, "master"}}},
    {cowboy, ".*", { git, "https://github.com/extend/cowboy.git", {tag, "1.0.0"}}},
    {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", {tag, "v1.3.3"}}},
    {entop, "0.0.1", {git, "git://github.com/mazenharake/entop.git", {branch, "master"}}},
    {eper, ".*", {git, "git://github.com/massemanet/eper.git", {branch, "master"}}},
    {recon, ".*", {git, "git://github.com/ferd/recon.git", {tag, "2.2.0"}}}
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
