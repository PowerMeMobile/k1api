{erl_opts, [
    warn_export_all,
    warn_missing_spec,
    %warnings_as_errors,
    debug_info
]}.
{xref_checks, [
    undefined_function_calls,
    deprecated_function_calls,
    locals_not_used
]}.
{sub_dirs, [
    "rel",
    "subapps/eoneapi",
    "subapps/k1api"
]}.
{deps, [
    {sync, ".*", {git, "https://github.com/ten0s/sync.git", {branch, "dk_support_release"}}},
    {entop, "0.0.1", {git, "https://github.com/mazenharake/entop.git", {branch, "master"}}},
    {eper, ".*", {git, "https://github.com/massemanet/eper.git", {branch, "master"}}},
    {etest_http, ".*", {git, "https://github.com/ten0s/etest_http.git", "HEAD"}}
]}.
{lib_dirs, ["deps", "subapps"]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
